<div class="row">
  <h1>Repo List</h1>

  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
      </tr>
    </thead>
    <tbody>
      <% @repos.each_with_index do |repo, index| %>
        <tr>
          <th scope="row"><%= index+1 %></th>
          <td><%= link_to repo['name'], commits_user_url(repo: repo.slice('name', 'description', 'html_url', 'size', 'created_at', 'language')) %></td>
          <td><%= repo['description'] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
